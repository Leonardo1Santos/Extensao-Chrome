{
  "manifest_version": 3,
  "name": "Minha Extensão (Personalize)",
  "version": "1.0.1",
  "description": "Extensão de exemplo para Chrome. Substitua os placeholders com seus dados.",
  "icons": {
    "16": "icons/icon16.jpg",
    "32": "icons/icon32.jpg",
    "48": "icons/icon48.jpg",
    "128": "icons/icon128.jpg"
  },
  "action": {
    "default_title": "Productivity Helper",
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "options_page": "src/options/options.html",
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "author": "SEU_NOME",
  "homepage_url": "https://github.com/SEU_USUARIO_GITHUB/SEU_REPOSITORIO"
}